<style>
  .blog-page {
    padding: 2rem 0;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--color-text-muted);
    font-size: 1.1rem;
  }

  .tags-filter {
    margin-bottom: 3rem;
    padding: 1.5rem;
    background: var(--color-tag-bg);
